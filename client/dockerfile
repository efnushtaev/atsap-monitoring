# Этап установки зависимостей
FROM node:18-alpine AS deps

# Установка системных зависимостей
RUN apk add --no-cache python3 make g++ git openssh-client

# Создаем и переходим в рабочую директорию
WORKDIR /app

# Копируем ТОЛЬКО файлы зависимостей (они уже в корне контекста)
COPY package.json package-lock.json* ./

# Устанавливаем зависимости
RUN npm cache clean --force
RUN npm ci --no-optional || \ 
    (npm install --no-optional --legacy-peer-deps && npm cache clean --force)

# Этап сборки приложения
FROM node:18-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules

# Копируем ВСЕ файлы из текущего контекста (папка client)
COPY . .

# Сборка приложения
ENV NODE_OPTIONS="--max-old-space-size=4096"
RUN npm run build

# Финальный образ с Nginx
FROM nginx:1.25-alpine
COPY --from=builder /app/build /usr/share/nginx/html